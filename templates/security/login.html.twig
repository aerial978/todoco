{% extends 'base_home.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
	<div class="row form-height align-items-center justify-content-center">
		<div class="col-lg-4">
			<div class="custom-title-background">
				<h2 class="text-center custom-title-color">Login</h2>
			</div>
			<div class="custom-form">
				{% if error %}
					<div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<div class="form-block">
					<form action="{{ path('login') }}" method="post">
						<label for="username" class="custom-label-color mt-4 mb-2">Username</label>
						<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>

						<label for="password" class="custom-label-color mt-4 mb-2">Password</label>
						<input type="password" class="form-control" id="password" name="_password"/>

						<button class="btn btn-custom w-100 mt-5" type="submit">Go</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

